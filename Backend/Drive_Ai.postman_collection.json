{
  "info": {
    "name": "Drive_Ai Backend",
    "_postman_id": "d7a5c4f0-9b1c-4f2c-a6cb-5b62c765e100",
    "description": "Postman Collection for Drive_Ai Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/signup",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sameer\",\n  \"email\": \"sameer@test.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"sameer@test.com\",\n  \"password\": \"123456\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.environment.set(\"jwt\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Folders",
      "item": [
        {
          "name": "Create Folder",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{jwt}}" }
            ],
            "url": "{{base_url}}/folders",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Folder\",\n  \"parent\": null\n}"
            }
          }
        },
        {
          "name": "Get All Folders",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": "{{base_url}}/folders"
          }
        },
        {
          "name": "Delete Folder",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": "{{base_url}}/folders/:id"
          }
        }
      ]
    },
    {
      "name": "Images",
      "item": [
        {
          "name": "Upload Image",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": "{{base_url}}/images/upload",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "name", "value": "sample-image", "type": "text" },
                { "key": "folderId", "value": "<FOLDER_ID>", "type": "text" },
                { "key": "image", "type": "file", "src": "" }
              ]
            }
          }
        },
        {
          "name": "Search Images",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": "{{base_url}}/images/search",
            "query": [{ "key": "query", "value": "sample" }]
          }
        },
        {
          "name": "Delete Image",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": "{{base_url}}/images/:id"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api" },
    { "key": "jwt", "value": "" }
  ]
}
